<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ExercÃ­cio 2 - Listas de Tarefas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-light d-flex flex-column min-vh-100 px-5">

    <%- include('partials/header') %>

    <main class="container-fluid px-5">
        <h1 class="mb-2 fw-normal display-4">Lista de Tarefas</h1>
        <% if (lists.length !== 0) {%>
            <div class="card text-bg-dark border-secondary mb-3">
                <ul class="list-group list-group-flush">
                    <% lists.forEach(list=> { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center bg-dark border-secondary">
                            <a href="/listas/<%= list.id %>" class="text-white text-decoration-none fs-3"><%= list.listName %></a>
                            <form action="/delete/<%= list.id %>" method="POST"><button type="submit" class="btn btn-danger btn-sm">Excluir</button></form>
                        </li>
                    <% }) %>
                </ul>
            </div>
        <% } %>
        <form action="/create" method="GET"><button type="submit" class="btn btn-primary btn-lg <%= lists.length === 0? 'mt-5' : '' %>">Nova Lista de Tarefas</button></form>

    </main>

    <%- include('partials/footer') %>

</body>
</html>